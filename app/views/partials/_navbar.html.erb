<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="<%= root_path %>" class="logo">
      <%= image_tag("logo_color.svg", size: "53x80", alt: "Logo") %>
    </a>
    <a href="<%= root_path %>" class="logo-domain">trocadesementes.pt</a>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu"><i class="fa fa-bars"></i></a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <% if user_signed_in? %>
          <li class="nav-link"><%= link_to "Sementes", seeds_path, class: cp(seeds_path) %></li>
          <li class="nav-link"><a href="#">Hortas Comunitárias</a></li>
          <li class="nav-link"><a href="#">Notícias</a></li>
          <li class="nav-link"><%= link_to "Termos e Condições", terms_path, class: cp(terms_path) %></li>
