            <div class="user--nav_img">
              <div class="heightContainer">
                     <%= image_tag current_user.photo %>
              </div>
            </div>
            <%= current_user.name %></a>
             <ul class="submenu">
               <li><%= link_to "Conta", edit_user_registration_path %></li>
               <li><%= link_to "Sair", destroy_user_session_path, method: :delete %></li>
