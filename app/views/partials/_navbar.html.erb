        <% else %>
          <li class="nav-link"> <%= link_to "Entrar", new_user_session_path %></li>
          <li class="nav-link"> <%= link_to "Registrar", new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
